{
  "manifest_version": 3,
  "name": "Roblox Alive",
  "description": "Complete Roblox enhancement with animations, themes, quick play, server filters, and advanced features!",
  "version": "2.0",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.roblox.com/*",
    "https://games.roblox.com/*",
    "https://users.roblox.com/*",
    "https://friends.roblox.com/*",
    "https://thumbnails.roblox.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}

{
  "manifest_version": 3,
  "name": "Roblox Alive Plus",
  "version": "1.0",
  "description": "Ultimate Roblox Alive Extension - all features unlocked",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://*.roblox.com/*",
    "*://*.rolimons.com/*"
  ],
  "host_permissions": [
    "*://*.roblox.com/*",
    "*://*.rolimons.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*"],
      "js": ["content-scripts/friends-enhancements.js", "content-scripts/avatar-sandbox.js", "content-scripts/trade-enhancements.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

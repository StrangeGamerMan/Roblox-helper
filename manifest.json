{
  "manifest_version": 3,
  "name": "Roblox Alive",
  "description": "Make Roblox alive with animations and customizations!",
  "version": "1.0",
  "permissions": ["storage"], 
  "host_permissions": ["https://www.roblox.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon128.png"],
      "matches": ["https://www.roblox.com/*"]
    }
  ]
}

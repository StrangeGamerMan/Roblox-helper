{
  "manifest_version": 3,
  "name": "Roblox Alive",
  "version": "1.0",
  "description": "Advanced Roblox extension with script-generated UI",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Roblox Alive"
  }
}
